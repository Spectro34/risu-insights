# RISU Insights Inventory Example
# Copy this to 'hosts' and add your managed nodes

[all:vars]
ansible_user=root
ansible_become=yes
ansible_become_method=sudo
ansible_python_interpreter=/usr/bin/python3

# SLES/SUSE systems
[sles_servers]
# sles-server1.example.com
# sles-server2.example.com

# Production servers
[production]
# prod-server1.example.com
# prod-server2.example.com

# Development servers
[development]
# dev-server1.example.com

# All managed nodes
[managed_nodes:children]
sles_servers
production
development

# Localhost for testing
[localhost]
127.0.0.1 ansible_connection=local ansible_become=no

# SSH configuration notes:
# - Configure SSH keys via ssh-agent or ~/.ssh/config
# - Use ansible_ssh_private_key_file per host/group if needed
# - Example: ansible_ssh_private_key_file=~/.ssh/id_rsa
